import numpy as np
import matplotlib.pyplot as plt


# making a line plot

# creating a figure 
plt.figure(figsize=(8,6)) # (blank canvas)

# data
x=[1,2,3,4,5,6]
y=[3,6,9,12,15,18]

# add a title
plt.title("x vs y (linear relationship)")
plt.xlabel("x-axis")
plt.ylabel("y-axis")

# create a line plot
plt.plot(x,y, label="f(x)=3x", linestyle="--", color="blue")
plt.scatter(x,y,label="data", marker="*", color="orange")
plt.legend()


